@page "/services"

<div class="services">
	<div class="services-grid">
		@for (int i = 0; i < _serviceCards.Count; i++)
		{
			<ServiceCard ServiceNo="i + 1" Service="@_serviceCards[i]" FormPageUrl="/contact"  />
		}
	</div>
</div>

@code {
	[Inject] public AppContent AppContent { get; set; } = null!;

	private List<ServiceInfo> _serviceCards => AppContent.User.ServiceInfos;
}
