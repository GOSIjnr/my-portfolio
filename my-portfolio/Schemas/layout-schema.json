{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "App Layout Schema",
	"type": "object",
	"properties": {
		"navigationLinks": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"title": {
						"type": "string"
					},
					"href": {
						"type": "string"
					},
					"cssType": {
						"type": "string",
						"enum": [
							"Normal",
							"Rounded",
							"RoundedInverted"
						]
					},
					"cssActiveType": {
						"type": "string",
						"enum": [
							"Normal",
							"UnderLine"
						]
					}
				},
				"required": [
					"title",
					"href",
					"cssType",
					"cssActiveType"
				]
			}
		},
		"contactMeLink": {
			"$ref": "#/properties/navigationLinks/items"
		},
		"downloadCVLink": {
			"$ref": "#/properties/navigationLinks/items"
		},
		"checkMyProjectsLink": {
			"$ref": "#/properties/navigationLinks/items"
		},
		"contactForm": {
			"type": "object",
			"properties": {
				"title": {
					"type": "string"
				},
				"description": {
					"type": "string"
				}
			},
			"required": [
				"title",
				"description"
			]
		},
		"resumeHeader": {
			"type": "object",
			"properties": {
				"title": {
					"type": "string"
				},
				"description": {
					"type": "string"
				}
			},
			"required": [
				"title",
				"description"
			]
		},
		"resumeTabs": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"label": {
						"type": "string"
					}
				},
				"required": [
					"label"
				]
			}
		},
		"experienceSectionBody": {
			"type": "string"
		},
		"educationSectionBody": {
			"type": "string"
		},
		"skillsSectionBody": {
			"type": "string"
		}
	},
	"required": [
		"navigationLinks",
		"contactMeLink",
		"downloadCVLink",
		"checkMyProjectsLink",
		"contactForm",
		"resumeHeader",
		"resumeTabs",
		"experienceSectionBody",
		"educationSectionBody",
		"skillsSectionBody"
	]
}