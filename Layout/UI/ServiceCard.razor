@inject NavigationManager NavManager

<div class="service-card">
	<div class="service-card__header">
		<span class="service-card__number">@(ServiceNo.ToString("D2"))</span>
		<button class="service-card__button" @onclick="NavigateToForm">
			<span class="service-card__arrow">&#8595;</span>
		</button>
	</div>
	<h3 class="service-card__title">@ServiceName</h3>
	<p class="service-card__description">@ServiceDescription</p>
</div>

@code {
	[Parameter] public int ServiceNo { get; set; }
	[Parameter] public string ServiceName { get; set; } = string.Empty;
	[Parameter] public string ServiceDescription { get; set; } = string.Empty;
	[Parameter] public string FormPageUrl { get; set; } = "/apply";

	void NavigateToForm()
	{
		var url = $"{FormPageUrl}?serviceNo={ServiceNo}";
		NavManager.NavigateTo(url);
	}
}
