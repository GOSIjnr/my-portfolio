@page "/services"

<div class="services-section">
	<div class="services-grid">
		@for (int i = 0; i < _serviceCards.Count - 0; i++)
		{
			var service = _serviceCards[i];

			<ServiceCard ServiceNo="i + 1" ServiceName="@service.Name" ServiceDescription="@service.Description"
				FormPageUrl="/contact" />
		}
	</div>
</div>

@code {
	[Inject] public AppContent AppContent { get; set; } = null!;

	private List<ServiceInfo> _serviceCards => AppContent.User.ServiceInfos;
}
