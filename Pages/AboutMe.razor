
@code {
    // Social media icon model
    private class SocialMediaIcon
    {
        public string Name { get; set; } = string.Empty;
        public string ImageUrl { get; set; } = string.Empty;
        public string ProfileUrl { get; set; } = string.Empty;
        public string AltText { get; set; } = string.Empty;
    }

    // List of social media icons
    private readonly List<SocialMediaIcon> _socialMediaIcons = new()
    {
        new SocialMediaIcon
        {
            Name = "Twitter",
            ImageUrl = "Images/icon.svg",
            ProfileUrl = "https://twitter.com/yourprofile",
            AltText = "Twitter"
        },
        new SocialMediaIcon
        {
            Name = "Facebook",
            ImageUrl = "Images/icon.svg",
            ProfileUrl = "https://facebook.com/yourprofile",
            AltText = "Facebook"
        },
        new SocialMediaIcon
        {
            Name = "Discord",
            ImageUrl = "Images/icon.svg",
            ProfileUrl = "https://discord.com/users/yourprofile",
            AltText = "Discord"
        },
        new SocialMediaIcon
        {
            Name = "YouTube",
            ImageUrl = "Images/icon.svg",
            ProfileUrl = "https://youtube.com/yourchannel",
            AltText = "YouTube"
        }
    };

    // About me details
// About me details
private const string _profileImageUrl = "https://github.com/GOSIjnr.png";
private const string _profileImageAlt = "Chinedu Victor Awugosi";
private const string _aboutMeTitle = "Hi, I’m Chinedu Victor Awugosi — a developer who finds just as much joy in crafting intuitive user interfaces as in unraveling complex logic behind the scenes, and occasionally diving into game engines just for the thrill of it.";
private const string _aboutMeDescription = "I’ve always loved creating things, especially the kind that live on a screen. What started as a curiosity turned into a full-blown passion for coding — and now, it’s what I do every day. I enjoy figuring out how things work, whether that’s a complex piece of back-end logic or the tiniest UI animation. Outside of development, I’m probably sketching out a game idea, exploring new tech, or just geeking out over clean, elegant code. This portfolio is a glimpse into the things I’ve built and the kind of work I love doing — thanks for stopping by.";

}

<!-- Inside your component markup -->
<div class="about-me-container" id="about">
    <div class="about-me-content">
        <div class="about-me-left">
            <img src="@_profileImageUrl" alt="@_profileImageAlt" class="profile-img" />
            <div class="social-icons">
                @foreach (var icon in _socialMediaIcons)
                {
                    <a href="@icon.ProfileUrl" target="_blank" rel="noopener noreferrer" title="@icon.Name">
                        <img src="@icon.ImageUrl" alt="@icon.AltText" class="social-icon" />
                    </a>
                }
            </div>
        </div>
        <div class="about-me-right">
            <h4>@_aboutMeTitle</h4>
            <p>@_aboutMeDescription</p>
        </div>
    </div>
</div>
