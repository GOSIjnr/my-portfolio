<div class="hero">
	<img class="hero__background" src="Images/backdrop.jpg" alt="Backdrop" />

	<div class="hero__overlay">
		<div class="hero__content">
			<h1 class="hero__title">
				@AppLayoutData.HomePageContent.MainTitle
				<span class="hero__title --highlight">@AppLayoutData.HomePageContent.HighlightedTitlePart</span>
			</h1>

			<p class="hero__description">
				@AppLayoutData.HomePageContent.DescriptionBody
			</p>

			<div class="hero__buttons">
				<div class="hero__button">
					<NavLinkItem NavigationLinkInfo="@AppLayoutData.ContactLinkAccent"
						LinkType="@TargetUrlFormat.HashPrefix" />
				</div>
				<div class="hero__button">
					<NavLinkItem NavigationLinkInfo="@AppLayoutData.ProjectsLink"
						LinkType="@TargetUrlFormat.HashPrefix" />
				</div>
			</div>
		</div>
	</div>
</div>
