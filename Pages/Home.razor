<div class="hero-section">
	<img src="Images/backdrop.jpg" alt="Backdrop" class="background-image" />

	<div class="hero-overlay">
		<div class="hero-content">
			<h1 class="hero-title">@AppLayoutData.HomePageContent.MainTitle<span
					class="highlight">@AppLayoutData.HomePageContent.HighlightedTitlePart</span></h1>
			<p class="intro-text">
				@AppLayoutData.HomePageContent.DescriptionBody
			</p>

			<div class="button-group">
				<div class="button-wrapper">
					<NavLinkItem NavigationLinkInfo="@AppLayoutData.ContactLinkAccent" LinkType="@TargetUrlFormat.HashPrefix"/>
				</div>
				<div class="button-wrapper">
					<NavLinkItem  NavigationLinkInfo="@AppLayoutData.ProjectsLink" LinkType="@TargetUrlFormat.HashPrefix"/>
				</div>
			</div>
		</div>
	</div>
</div>
