<label class="contact-form__radio-card" tabindex="0" role="radio" aria-checked="@(Selected)" @onclick="HandleClick"
	@onkeydown="HandleKeyDown">
	<input type="radio" hidden name="service" value="@Service" checked="@Selected" />
	<span class="service-name">@Service</span>
	<span class="service-icon">
		@if (Selected)
		{
			<svg viewBox="0 0 24 24">
				<path fill="currentColor" d="M20.285 6.707l-11.39 11.39-5.18-5.18 1.414-1.414 3.766 3.767 9.976-9.975z" />
			</svg>
		}
		else
		{
			<svg viewBox="0 0 24 24">
				<path fill="currentColor" d="M19 13H5v-2h14v2z" />
			</svg>
		}
	</span>
</label>

@code {
	[Parameter] public string Service { get; set; } = string.Empty;
	[Parameter] public bool Selected { get; set; }
	[Parameter] public EventCallback<string> OnSelect { get; set; }

	private async Task HandleClick()
	{
		await OnSelect.InvokeAsync(Service);
	}

	private async Task HandleKeyDown(KeyboardEventArgs e)
	{
		if (e.Key == "Enter" || e.Key == " ")
		{
			await OnSelect.InvokeAsync(Service);
		}
	}
}
